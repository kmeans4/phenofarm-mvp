// @ts-nocheck
/**
 * PhenoFarm - Database Schema
 * B2B Cannabis Wholesale Marketplace MVP
 * 
 * Tech Stack: PostgreSQL + Prisma
 * Host: Neon (free tier)
 */

datasource db {
  url = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          UserRole  @default(GROWER)
  growerId      String?
  dispensaryId  String?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  grower        Grower?
  dispensary    Dispensary?
  sessions      Session[]
  
  @@map("users")
}

enum UserRole {
  ADMIN
  GROWER
  DISPENSARY
}

model Grower {
  id            String    @id @default(cuid())
  userId        String    @unique
  businessName  String
  licenseNumber  String?
  phone         String?
  address       String?
  city          String?
  state         String?   @default("VT")
  zip           String?
  website       String?
  description   String?
  logo          String?
  isVerified    Boolean   @default(false)
  products      Product[]
  orders        Order[]
  orderItems    OrderItem[]
  cartItems     CartItem[]
  metrcSyncLogs MetrcSyncLog[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("growers")
}

model Dispensary {
  id            String    @id @default(cuid())
  userId        String    @unique
  businessName  String
  licenseNumber  String?
  phone         String?
  address       String?
  city          String?
  state         String?   @default("VT")
  zip           String?
  website       String?
  description   String?
  logo          String?
  isVerified    Boolean   @default(false)
  orders        Order[]
  cart          Cart?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("dispensaries")
}

model Product {
  id            String    @id @default(cuid())
  growerId      String
  name          String
  strain        String?
  category      String?
  subcategory   String?
  thc           Float?
  cbd           Float?
  price         Decimal   @db.Decimal(10,2)
  inventoryQty  Int       @default(0)
  unit          String    @default("gram")
  isAvailable   Boolean   @default(true)
  description   String?
  images        String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastSyncedAt  DateTime?
  
  grower        Grower    @relation(fields: [growerId], references: [id], onDelete: Cascade)
  orderItems    OrderItem[]
  cartItems     CartItem[]
  
  @@map("products")
}

model Order {
  id            String    @id @default(cuid())
  orderId       String    @unique @default(cuid())
  growerId      String
  dispensaryId  String
  status        OrderStatus @default(PENDING)
  totalAmount   Decimal   @db.Decimal(10,2)
  subtotal      Decimal   @db.Decimal(10,2)
  tax           Decimal   @db.Decimal(10,2) @default(0)
  shippingFee   Decimal   @db.Decimal(10,2) @default(0)
  notes         String?
  shippedAt     DateTime?
  deliveredAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  grower        Grower    @relation(fields: [growerId], references: [id], onDelete: Cascade)
  dispensary    Dispensary @relation(fields: [dispensaryId], references: [id], onDelete: Cascade)
  items         OrderItem[]
  payments      Payment[]
  
  @@map("orders")
}

model OrderItem {
  id            String    @id @default(cuid())
  orderId       String
  productId     String
  growerId      String
  quantity      Int       @default(1)
  unitPrice     Decimal   @db.Decimal(10,2)
  totalPrice    Decimal   @db.Decimal(10,2)
  createdAt     DateTime  @default(now())
  
  order         Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product       Product   @relation(fields: [productId], references: [id])
  grower        Grower    @relation(fields: [growerId], references: [id])
  
  @@map("order_items")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model Session {
  id            String    @id @default(cuid())
  sessionToken  String    @unique
  userId        String
  expires       DateTime
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

model MetrcSyncLog {
  id            String    @id @default(cuid())
  growerId      String
  recordsSynced Int       @default(0)
  success       Boolean   @default(true)
  errorMessage  String?
  createdAt     DateTime  @default(now())
  
  grower        Grower    @relation(fields: [growerId], references: [id])
  
  @@map("metrc_sync_logs")
}

model Payment {
  id            String    @id @default(cuid())
  orderId       String
  amount        Decimal   @db.Decimal(10,2)
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  transactionId String?
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  order         Order     @relation(fields: [orderId], references: [id])
  
  @@map("payments")
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  BANK_TRANSFER
  CRYPTO
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

// Cart model for dispensary shopping
model Cart {
  id            String    @id @default(cuid())
  dispensaryId  String    @unique
  subtotal      Decimal   @db.Decimal(10,2) @default(0)
  tax           Decimal   @db.Decimal(10,2) @default(0)
  total         Decimal   @db.Decimal(10,2) @default(0)
  itemCount     Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  dispensary    Dispensary @relation(fields: [dispensaryId], references: [id], onDelete: Cascade)
  items         CartItem[]
  
  @@map("carts")
}

model CartItem {
  id            String    @id @default(cuid())
  cartId        String
  productId     String
  growerId      String
  quantity      Int       @default(1)
  unitPrice     Decimal   @db.Decimal(10,2)
  totalPrice    Decimal   @db.Decimal(10,2)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  cart          Cart      @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product       Product   @relation(fields: [productId], references: [id])
  grower        Grower    @relation(fields: [growerId], references: [id])
  
  @@unique([cartId, productId])
  @@map("cart_items")
}
